# Replace <username>, <password>, and cluster details with your own credentials
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/StayEase?retryWrites=true&w=majority

# Port on which the server will run
PORT=5000

# Base URL of the frontend client
CLIENT_BASE_URL=http://localhost:5173

# Cloudinary configuration for image uploads
CLOUDINARY_CLOUD_NAME=<your-cloud-name>
CLOUDINARY_API_KEY=<your-cloudinary-api-key>
CLOUDINARY_API_SECRET=<your-cloudinary-api-secret>

# PayPal configuration for payment processing
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=<your-paypal-client-id>
